@import "base.styl"

.container
  margin 0 auto
  padding 0 15px

.container::after
  content ""
  display table
  clear both
  
.bg
  background-image url(../images/bg.jpg)
  background-color #EEAE93
  position fixed
  left 0
  right 0
  top 0
  bottom 0

.wrapper
  position relative

.main-header
  padding 100px 0 20px
  text-align center
  text-shadow 0 2px 4px rgba(0, 0, 0, 0.2)
  color #fff

.main-footer
  padding 35px 0
  background rgba(255, 255, 255, 0.85)
  text-align center
  a
    color #6b6b6b

.bg
  position: fixed
  left 0
  right 0
  top 0
  bottom 0

.p-bd
  position relative

.g-hd
  padding 100px 0 20px
  text-align center
  text-shadow 0 2px 4px rgba(0, 0, 0, 0.2)
  color #fff

.g-box
  margin 0 auto

.g-mn
  background #f8f8f8


.g-ft
  padding 35px 0
  background rgba(255, 255, 255, 0.85)
  color #6b6b6b
  text-align center

.u-tit a
  color: #fff
  font: normal 60px/1 'Microsoft Yahei'


.u-about
  margin 52px 0 0
  font-size 14px

.m-nav
  margin 50px 0 0
  text-align center
  a
    color #fff
    display inline-block;
    padding 0 12px
    font-size 36px

.m-posts
  padding 68px 0 0

.m-post
  margin 0 0 100px

.m-post img,.m-post-video embed,.m-post-video object
  display block
  max-width 100%
  margin 0 auto

.text,.desc
  font-size 16px
  letter-spacing 2px

.text h1
  padding 20px 0
  a
    font-size 2.5em
    color titleColor

.text 
  p,ul,ol,blockquote
    margin 0 0 25px
  ul,ol
    padding 0 0 0 1.5em

.text ul li
  list-style outside disc

.text ol li
  list-style outside decimal

.text blockquote
  border-left 5px solid #ddd
  padding 2px 10px 1px 20px
  margin 10px 0
  color #888
  zoom 1
  p,footer
    margin 9px 0
  footer
    font-size 10px

.textpic
  float right
  width 250px

.subinfo
  margin 45px 0 0
  padding 20px 0 0
  border-top borderStyle
  a
    display inline-block
    margin 0 25px 0 0
    color #e0e0e0
    font-size 14px
  ul
    display inline
  li
    float right
    margin-left 10px
    a
      margin 0
      &:link, &:visited
        color linkColor
    
.subinfo a:hover
  color #aeaeae

.m-subinfo2
  padding 0 0 30px

.img
  margin 0 0 26px

.desc
  margin 10px 0 0

.cover
  float left
  width 250px
  margin 0 30px 15px 0

.m-page
  padding 0 0 40px
  margin -50px 0 0
  a
    padding 0 .5em
    height 44px
    background #f1f1f1
    color #808080
    text-align center
    letter-spacing 2px
    font bold 16px/44px Microsoft yahei

.m-page a:hover
  background #e9e9e9

.article-all
  .title
    text-align center
  h1
    padding 0 0 20px
    font-size 36px
    font-weight 700
  h2
    margin 25px 0
    padding 12px 0
    font-size 28px
    font-weight 600
    border-bottom borderStyle
  h3
    font-size 22px
    padding 15px 0
    font-weight 600
    color linkColor
  h4
    font-size 18px
    padding 10px 0
  h5
    font-size 16px
    padding 8px 0
  table
    width 100%
    border-collapse collapse
    border-spacing 0
  th
    font-weight bold
    border-bottom 3px solid #ddd
    padding-bottom 0.5em
  td
    border-bottom 1px solid #ddd
    padding 10px 0
  .video-container
    position relative
    overflow hidden
    text-align center
    iframe
      width 100%
      height 400px
 
.article-summary
  h2
    font-size 2em
    a
      color titleColor 
  h3
    font-size 1.5em   
      
.tag-title
  color linkColor
  font-size 32px
  padding 60px 0 0
  
@media (min-width: 576px)
  .container
    width 500px
    max-width 100%

@media (min-width: 768px)
  .container
    width 600px
    max-width 100%

@media (min-width: 992px)
  .container
    width: 700px;
    max-width: 100%

@media (min-width: 1200px)
  .container
    width 800px
    max-width 100%